# === Chatwoot / Docker envs ===
# IMPORTANT: copy this to .env and fill the TODOs

# A long random string (see README for how to generate)
SECRET_KEY_BASE=TODO_change_me

# Public base URL where Chatwoot runs (Docker maps to localhost:4000)
FRONTEND_URL=http://localhost:4000
BACKEND_URL=http://localhost:4000

# Allow local signup to create the first admin
ENABLE_ACCOUNT_SIGNUP=true

# --- Postgres ---
POSTGRES_DATABASE=chatwoot_production
POSTGRES_USERNAME=chatwoot
POSTGRES_PASSWORD=chatwoot

# --- Redis ---
REDIS_URL=redis://redis:6379/1

# (Optional) SMTP for email sending. You can leave these empty for local dev.
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
